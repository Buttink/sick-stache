<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <org.sickstashe.view.DefaultImageView
                android:id="@+id/showImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_banner" />

            <TextView
                android:id="@+id/showTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/sickbeard_title_background"
                android:paddingLeft="3dp"
                android:text="Show Name Unknown"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/directoryTextView"
                style="@style/ClickableText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_more"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Directory"
                android:enabled="false" />

            <TextView
                android:id="@+id/languageTextView"
                style="@style/ClickableText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_more"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Language"
                android:enabled="false" />

            <TextView
                android:id="@+id/seasonFolderTextView"
                style="@style/ClickableText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_more"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Season Folders"
                android:enabled="false" />

            <TextView
                android:id="@+id/statusTextView"
                style="@style/ClickableText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_more"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Status"
                android:enabled="false" />

            <TextView
                android:id="@+id/intialQualityTextView"
                style="@style/ClickableText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_more"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Initial Quality"
                android:enabled="false" />

            <TextView
                android:id="@+id/archiveQualityTextView"
                style="@style/ClickableText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_more"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Archive Quality"
                android:enabled="false" />
            
        </LinearLayout>
        
    </ScrollView>

    <Button
        android:id="@+id/addButton"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Show" />

</LinearLayout>