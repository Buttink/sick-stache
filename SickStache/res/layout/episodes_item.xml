<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/episodesItemTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Example Episode List Item"
        android:textColor="#000000"
        android:textSize="24sp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/sickbeard_unaired_background" />
    
    <ImageView
        android:id="@+id/episodesSelectedOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_selector_selected"
        android:layout_alignRight="@id/episodesItemTextView"
        android:layout_alignBottom="@id/episodesItemTextView"
        android:visibility="invisible" />

</RelativeLayout>