<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <org.sickstache.widget.DefaultImageView
            android:id="@+id/showImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_banner" />

        <TextView
            android:id="@+id/showTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/sickbeard_title_background"
            android:paddingLeft="3dp"
            android:text="Show Name Unknown"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
        
        <org.sickstache.widget.WorkingTextView
            android:id="@+id/bannerWorkingTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
<!--         <ImageView -->
<!-- 		    android:background="@android:drawable/divider_horizontal_dark" -->
<!-- 		    android:layout_width="fill_parent" -->
<!-- 		    android:layout_height="2px" /> -->
        
        <org.sickstache.widget.WorkingTextView
            android:id="@+id/qualityWorkingTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
        <org.sickstache.widget.WorkingTextView
            android:id="@+id/archiveQualityWorkingTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
        <org.sickstache.widget.WorkingTextView
            android:id="@+id/pauseWorkingTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
        <org.sickstache.widget.WorkingTextView
            android:id="@+id/refreshWorkingTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
        <org.sickstache.widget.WorkingTextView
            android:id="@+id/updateWorkingTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>
    
</ScrollView>