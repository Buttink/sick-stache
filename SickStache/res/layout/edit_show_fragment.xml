<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <org.sickstache.widget.DefaultImageView
            android:id="@+id/showImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_banner" />

        <TextView
            android:id="@+id/showTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/sickbeard_title_background"
            android:paddingLeft="3dp"
            android:text="Show Name Unknown"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
        
         <TextView
            android:id="@+id/bannerTextView"
            style="@style/ClickableText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/ic_menu_more"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="Fetch Banner"
            android:state_enabled="false" />
        
        <TextView
            android:id="@+id/intialQualityTextView"
            style="@style/ClickableText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/ic_menu_more"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="Initial Quality"
            android:state_enabled="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/archiveQualityTextView"
            style="@style/ClickableText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/ic_menu_more"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="Archive Quality"
            android:state_enabled="false"
            android:visibility="gone" />

<!--         <TextView -->
<!--             android:id="@+id/languageTextView" -->
<!--             style="@style/ClickableText" -->
<!--             android:layout_width="fill_parent" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:drawableRight="@android:drawable/ic_menu_more" -->
<!--             android:gravity="center_vertical" -->
<!--             android:paddingLeft="3dp" -->
<!--             android:text="Language" -->
<!--             android:state_enabled="false" /> -->

        <TextView
            android:id="@+id/seasonFolderTextView"
            style="@style/ClickableText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/ic_menu_more"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="Season Folders"
            android:state_enabled="false" />
        
        <TextView
            android:id="@+id/directoryTextView"
            style="@style/ClickableText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/ic_menu_more"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="Pause"
            android:state_enabled="false" />

        <TextView
            android:id="@+id/airbydateTextView"
            style="@style/ClickableText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/ic_menu_more"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="Air By Date"
            android:state_enabled="false" />
        
    </LinearLayout>
    
</ScrollView>